n      startX: 0,\r\n      isSwiping: false,\r\n    }\r\n  },\r\n  methods: {\r\n    nextSlide() {\r\n      this.previousSlide = this.currentSlide;\r\n      this.currentSlide = (this.currentSlide + 1) % this.slides.length;\r\n    },\r\n    prevSlide() {\r\n      this.previousSlide = this.currentSlide;\r\n      this.currentSlide =\r\n        (this.currentSlide - 1 + this.slides.length) % this.slides.length;\r\n    },\r\n    goToSlide(index) {\r\n      this.previousSlide = this.currentSlide;\r\n      this.currentSlide = index;\r\n    },\r\n    startSwipe(event) {\r\n      this.isSwiping = true;\r\n      this.startX = event.touches ? event.touches[0].clientX : event.clientX;\r\n    },\r\n    handleSwipe(event) {\r\n      if (!this.isSwiping) return;\r\n      const currentX = event.touches ? event.touches[0].clientX : event.clientX;\r\n      const diffX = this.startX - currentX;\r\n\r\n      if (diffX > 50) {\r\n        this.isSwiping = false;\r\n        this.nextSlide();\r\n      } else if (diffX < -50) {\r\n        this.isSwiping = false;\r\n        this.prevSlide();\r\n      }\r\n    },\r\n    endSwipe() {\r\n      this.isSwiping = false;\r\n    },\r\n  },\r\n}\r\n</script>\r\n\r\n\r\n"],"mappings":"AA2CA,OAAOA,EAAC,MAAO,+BAA8B;AAC7C,OAAOC,EAAC,MAAO,+BAA8B;AAC7C,OAAOC,EAAC,MAAO,+BAA8B;AAC7C,OAAOC,EAAC,MAAO,+BAA8B;AAC7C,OAAOC,kBAAiB,MAAO,0BAAyB;AACxD,eAAe;EACbC,IAAI,EAAC,SAAS;EACdC,UAAU,EAAC;IACVF;EACD,CAAC;EACDG,IAAIA,CAAA,EAAE;IACJ,OAAM;MACLC,MAAM,EAAC,CACN;QACEC,KAAK,EAACT,EAAE;QACRU,KAAK,EAAC,qBAAqB;QAC3BC,KAAK,EAAC,YAAY;QAClBC,WAAW,EAAC;MACd,CAAC,EACA;QACCH,KAAK,EAACR,EAAE;QACRS,KAAK,EAAC,iBAAiB;QACvBC,KAAK,EAAC,cAAc;QACpBC,WAAW,EAAC;MACd,CAAC,EACA;QACCH,KAAK,EAACP,EAAE;QACRQ,KAAK,EAAC,gCAAgC;QACtCC,KAAK,EAAC,iBAAiB;QACvBC,WAAW,EAAC;MACd,CAAC,EACA;QACCH,KAAK,EAACN,EAAE;QACRO,KAAK,EAAC,0BAA0B;QAChCC,KAAK,EAAC,WAAW;QACjBC,WAAW,EAAC;MACd,EACA;MACAC,YAAY,EAAE,CAAC;MACfC,aAAa,EAAE,IAAI;MACnBC,MAAM,EAAE,CAAC;MACTC,SAAS,EAAE;IACb;EACF,CAAC;EACDC,OAAO,EAAE;IACPC,SAASA,CA