this.nextSlide();\r\n      } else if (diffX < -50) {\r\n        this.isSwiping = false;\r\n        this.prevSlide();\r\n      }\r\n    },\r\n    endSwipe() {\r\n      this.isSwiping = false;\r\n    },\r\n    nextSlide() {\r\n      this.previousSlide = this.currentSlide;\r\n      this.currentSlide = (this.currentSlide + 1) % this.filteredItems.length;\r\n    },\r\n    prevSlide() {\r\n      this.previousSlide = this.currentSlide;\r\n      this.currentSlide =\r\n        (this.currentSlide - 1 + this.filteredItems.length) %\r\n        this.filteredItems.length;\r\n    },\r\n    goToSlide(index) {\r\n      this.previousSlide = this.currentSlide;\r\n      this.currentSlide = index;\r\n    },\r\n  },\r\n};\r\n</script>\r\n"],"mappings":";;AA6GA,OAAOA,cAAa,MAAO,uCAAuC;AAElE,eAAe;EACbC,IAAI,EAAE,iBAAiB;EACvBC,UAAU,EAAE;IAAEF;EAAe,CAAC;EAC9BG,IAAIA,CAAA,EAAG;IACL,OAAO;MACLC,YAAY,EAAE,aAAa;MAC3BC,OAAO,EAAE,CACP;QAAEC,KAAK,EAAE,eAAe;QAAEC,KAAK,EAAE,aAAa;QAAEC,KAAK,EAAE;MAAQ,CAAC,EAChE;QAAEF,KAAK,EAAE,WAAW;QAAEC,KAAK,EAAE,QAAQ;QAAEC,KAAK,EAAE;MAAO,CAAC,EACtD;QAAEF,KAAK,EAAE,WAAW;QAAEC,KAAK,EAAE,WAAW;QAAEC,KAAK,EAAE;MAAO,CAAC,EACzD;QAAEF,KAAK,EAAE,QAAQ;QAAEC,KAAK,EAAE,SAAS;QAAEC,KAAK,EAAE;MAAO,CAAC,CACrD;MACDC,KAAK,EAAE,CAAC,UAAU;MAAE;MACpBC,YAAY,EAAE,CAAC;MACfC,aAAa,EAAE,IAAI;MACnBC,MAAM,EAAE,CAAC;MACTC,SAAS,EAAE;IACb,CAAC;EACH,CAAC;EACDC,QAAQ,EAAE;IACRC,aAAaA,CAAA,EAAG;MACd,OAAO,IAAI,CAACX,YAAW,KAAM,KAAI,GAC7B,IAAI,CAACK,KAAI,GACT,IAAI,CAACA,KAAK,CAACO,MAAM,CAAEC,IAAI,IAAKA,IAAI,CAACC,QAAO,KAAM,IAAI,CAACd,YAAY,CAAC;IACtE;EACF,CAAC;EACDe,OAAO,EAAE;IACPC,UAAUA,CAACC,KAAK,EAAE;MAChB,IAAI,CAACR,SAAQ,GAAI,IAAI;MACrB,IAAI,CAACD,MAAK,GAAIS,KAAK,CAACC,OAAM,GAAID,KAAK,CAACC,OAAO,CAAC,CAAC,CAAC,CAACC,OAAM,GAAIF,KAAK,CAACE,OAAO;IACxE,CAAC;IACDC,WAAWA,CAACH,KAAK,EAAE;MACjB,IAAI,CAAC,IAAI,CAACR,SAAS,EAAE;MACrB,MAAMY,QAAO,GAAIJ,KAAK,CAACC,OAAM,GAAID,KAAK,CAACC,OAAO,CAAC,CAAC,CAAC,CAACC,OAAM,GAAIF,KAAK,CAACE,OAAO;MACzE,MAAMG,KAAI,GAAI,IAAI,CAACd,MAAK,GAAIa,QAAQ;MACpC,IAAIC,KAAI,GAAI,EAAE,EAA